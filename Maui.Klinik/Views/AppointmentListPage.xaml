<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Maui.Klinik.ViewModels"
             xmlns:converters="clr-namespace:Maui.Klinik.Converters"
             x:Class="Maui.Klinik.Views.AppointmentListPage"
             x:DataType="viewmodels:AppointmentListViewModel"
             Title="Appointments">

    <ContentPage.Resources>
        <converters:AppointmentDateToColorConverter x:Key="AppointmentDateToColorConverter"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddAppointmentCommand}"/>
        <ToolbarItem Text="Refresh" Command="{Binding RefreshCommand}"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search by patient or physician..."
                   Text="{Binding SearchText}"/>

        <!-- Sort Controls -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" Margin="0,5">
            <Picker Grid.Column="0"
                    Title="Sort by"
                    SelectedItem="{Binding SortProperty}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>StartTime</x:String>
                        <x:String>Patient</x:String>
                        <x:String>Physician</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Grid.Column="1"
                    Text="{Binding SortAscending, Converter={StaticResource BoolToSortTextConverter}}"
                    Command="{Binding ToggleSortDirectionCommand}"
                    WidthRequest="80"/>
        </Grid>

        <!-- Color Legend -->
        <Label Grid.Row="2"
               Text="ðŸŸ¢ Green = Today's Appointments"
               FontSize="12"
               TextColor="Gray"
               Margin="5,5,5,10"
               HorizontalOptions="Start"/>

        <!-- Appointments List -->
        <CollectionView Grid.Row="3"
                        ItemsSource="{Binding FilteredAppointments}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:AppointmentDisplay">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                          BackgroundColor="Red"
                                          Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentListViewModel}}, Path=DeleteAppointmentCommand}"
                                          CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="5" Padding="10" HasShadow="True"
                               BackgroundColor="{Binding StartTime, Converter={StaticResource AppointmentDateToColorConverter}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentListViewModel}}, Path=EditAppointmentCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding StartTime, StringFormat='{0:dddd, MMMM dd, yyyy}'}"
                                       FontSize="16"
                                       FontAttributes="Bold"/>

                                <Label Grid.Row="1" Grid.Column="0"
                                       FontSize="14"
                                       TextColor="Gray">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Time: "/>
                                            <Span Text="{Binding StartTime, StringFormat='{0:h:mm tt}'}" FontAttributes="Bold"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Grid.Row="2" Grid.Column="0"
                                       FontSize="14"
                                       TextColor="Gray">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Patient: "/>
                                            <Span Text="{Binding PatientName}" FontAttributes="Bold"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Grid.Row="3" Grid.Column="0"
                                       FontSize="14"
                                       TextColor="Gray">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Physician: Dr. "/>
                                            <Span Text="{Binding PhysicianName}" FontAttributes="Bold"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Label Grid.Row="4" Grid.Column="0"
                                       FontSize="14"
                                       TextColor="Gray">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Room: "/>
                                            <Span Text="{Binding Room}" FontAttributes="Bold"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>

                                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="5"
                                        Text="Edit"
                                        VerticalOptions="Center"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentListViewModel}}, Path=EditAppointmentCommand}"
                                        CommandParameter="{Binding .}"
                                        Margin="5,0,0,0"/>

                                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="5"
                                        Text="Delete"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AppointmentListViewModel}}, Path=DeleteAppointmentCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        VerticalOptions="Center"
                                        Margin="5,0,0,0"/>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="No appointments found"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"/>
                    <Label Text="Add an appointment or adjust your search criteria"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
