<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Maui.Klinik.ViewModels"
             xmlns:models="clr-namespace:Library.Klinik.Models;assembly=Library.Klinik"
             xmlns:converters="clr-namespace:Maui.Klinik.Converters"
             x:Class="Maui.Klinik.Views.PatientListPage"
             x:DataType="vm:PatientListViewModel"
             Title="Patients">

    <ContentPage.Resources>
        <converters:AgeToColorConverter x:Key="AgeToColorConverter"/>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddPatientCommand}" />
        <ToolbarItem Text="Refresh" Command="{Binding RefreshCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search patients..."
                   Text="{Binding SearchText}"/>

        <!-- Sort Controls -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Margin="0,5">
            <Picker Grid.Column="0" 
                    Title="Sort By"
                    SelectedItem="{Binding SortProperty}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>FirstName</x:String>
                        <x:String>LastName</x:String>
                        <x:String>DateOfBirth</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <Button Grid.Column="1"
                    Text="{Binding SortAscending, Converter={StaticResource BoolToSortTextConverter}}"
                    Command="{Binding ToggleSortCommand}"
                    WidthRequest="80"/>
        </Grid>

        <!-- Patient List -->
        <Grid Grid.Row="2">
            <CollectionView ItemsSource="{Binding Patients}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Patient">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PatientListViewModel}}, Path=DeletePatientCommand}"
                                           CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        
                        <Frame Margin="5" Padding="10" HasShadow="True" CornerRadius="5"
                               BackgroundColor="{Binding DateOfBirth, Converter={StaticResource AgeToColorConverter}}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PatientListViewModel}}, Path=EditPatientCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       FontSize="18"
                                       FontAttributes="Bold">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding FirstName}"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding LastName}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                       
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Address}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                       
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding DateOfBirth, StringFormat='DOB: {0:MM/dd/yyyy}'}"
                                       FontSize="12"
                                       TextColor="Gray"/>

                                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                        Text="Edit"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PatientListViewModel}}, Path=EditPatientCommand}"
                                        CommandParameter="{Binding .}"
                                        VerticalOptions="Center"
                                        Margin="5,0,0,0"/>

                                <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                        Text="Delete"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PatientListViewModel}}, Path=DeletePatientCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        VerticalOptions="Center"
                                        Margin="5,0,0,0"/>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="Center">
                    <Label Text="No patients found"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"/>
                    <Label Text="Add a patient or adjust your search criteria"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
        </Grid>
    </Grid>
</ContentPage>
