<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Klinik.Views.PatientDetailPage"
             Title="{Binding PageTitle}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="First Name" FontAttributes="Bold"/>
            <Entry Text="{Binding FirstName}" Placeholder="Enter first name"/>

            <Label Text="Last Name" FontAttributes="Bold"/>
            <Entry Text="{Binding LastName}" Placeholder="Enter last name"/>

            <Label Text="Address" FontAttributes="Bold"/>
            <Entry Text="{Binding Address}" Placeholder="Enter address"/>

            <Label Text="Date of Birth" FontAttributes="Bold"/>
            <DatePicker Date="{Binding DateOfBirth}"/>

            <Label Text="Race" FontAttributes="Bold"/>
            <Entry Text="{Binding Race}" Placeholder="Enter race"/>

            <Label Text="Gender" FontAttributes="Bold"/>
            <Picker Title="Select Gender" SelectedItem="{Binding Gender}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                        <x:String>Other</x:String>
                        <x:String>Prefer not to say</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Save"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="{StaticResource Primary}"/>
                        
                <Button Grid.Column="1"
                        Text="Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
